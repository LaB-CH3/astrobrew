---
import Showcase from '../assets/hiw.svg'
const features = ['Find your tutor', 'Choose your subject', 'Start learning']
---


<section class="product-defined">
    <div class="container">
         <div class="row product-brief-items">
            <div class="brief-media center one-half column">
                <img src={Showcase.src} alt="Showcase mockup">
            </div>
            <div class="brief-tab one-half column">
                <h3 class="h1-title">Spark growth and engagement</h3>
                <p class="m-paragraph m-margin">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse varius enim in eros elementum tristique.</p>
                <ol class="ro">
                    {features.map((el, index) => (
                        <li><span>{index + 1}</span> <span>{el}</span></li>
                    ))}
                </ol>
                <br>
                <a href="https://github.com/LaB-CH3/astrobrew" class="button button-primary lg">Register for free</a>
            </div>
           
        </div>
    </div>
</section>


<style lang="scss">



.product-defined{ 
    padding: 120px 20px; 
    .brief-media img{
      width: 100%;
     
    }
    .product-brief-items{
        display: flex;
        align-items: center;
    }
    .brief-tab{
        padding-top: 40px;
    }
   
    ol{
        counter-reset: step;
        align-items: center;
        list-style: none;
        >li{
            position: relative;
            display: flex;
            gap: 10px;
            align-items: center;
            span:first-child{
                border: 2px solid #121117;
                height: 20px;
                width: 20px;
                display: flex;
                align-items: center;
                justify-content: center;
                border-radius: 50px;
            }
          
           
        }
    }

    @media (max-width: 700px) {
        .product-brief-items{
            flex-direction: column-reverse;
            gap: 30px;
            .brief-tab{
                padding-top: 0px;
            }
        }
        
    }
  }
</style>